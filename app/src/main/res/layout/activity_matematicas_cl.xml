<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatematicasCl"
    android:background="#fefae0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menu">
                <ImageView
                    android:id="@+id/decora"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/decor2"/>
                <HorizontalScrollView
                    android:id="@+id/materias"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/encabezado"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        >
                        <RelativeLayout
                            android:id="@+id/biolo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                            <ImageButton
                                android:layout_centerHorizontal="true"
                                android:id="@+id/biologia"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/icbiologia"
                                android:onClick="bio"/>
                            <TextView
                                android:layout_marginTop="9dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Biología"
                                android:textColor="#ffffff"
                                android:layout_below="@+id/biologia"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_centerVertical="true"
                            android:id="@+id/fundaEcono"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/biolo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                            <ImageButton
                                android:layout_centerHorizontal="true"
                                android:id="@+id/fundaEconomia"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/icfeconomia"
                                android:onClick="fundaE"/>
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/fundaEconomia"
                                android:text="Fundamentos de economía"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:textSize="12dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_centerVertical="true"
                            android:id="@+id/fisi"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/fundaEcono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">
                            <ImageButton
                                android:layout_centerHorizontal="true"
                                android:id="@+id/fisica"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/icfisica"
                                android:onClick="fisi"/>

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/fisica"
                                android:layout_marginTop="0dp"
                                android:text="Física"
                                android:textAlignment="center"
                                android:textColor="#ffffff" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_centerVertical="true"
                            android:id="@+id/mate"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/fisi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/decor3">
                            <ImageButton
                                android:layout_centerHorizontal="true"
                                android:id="@+id/matematicas"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="@drawable/icmatematicas"
                                android:onClick="mate"/>
                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/matematicas"
                                android:text="Matemáticas"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_centerVertical="true"
                            android:id="@+id/constiDemo"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/mate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
