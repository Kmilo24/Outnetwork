                            android:layout_below="@+id/multiplicacionC"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="20dp"
                            android:justificationMode="inter_word"
                            android:textColor="#ffffff"/>
                        <TextView
