<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterCl"
    android:background="#fefae0"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <ScrollView
           android:id="@+id/todo"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="80dp"
                   android:id="@+id/titulo">
                   <ImageView
                       android:id="@+id/decora"
                       android:layout_width="match_parent"
                       android:layout_height="80dp"
                       android:src="@drawable/decor"/>
                   <TextView
                       android:layout_marginTop="20dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="BIENVENIDO"
                       android:textSize="30dp"
                       android:textAlignment="center"
                       android:textColor="#000000"
                       android:layout_centerHorizontal="true" />
               </RelativeLayout>
               <TextView
                   android:layout_marginTop="30dp"
                   android:layout_below="@id/titulo"
                   android:id="@+id/name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="NOMBRE"
                   android:layout_centerHorizontal="true"

                   android:textSize="20dp"/>
               <EditText
                   android:id="@+id/nameEd"
                   android:layout_marginTop="25dp"
                   android:gravity="center"
                   android:layout_centerHorizontal="true"
                   android:layout_width="280dp"
                   android:layout_height="40dp"
                   android:layout_below="@id/name"
                   android:background="@drawable/iclo"/>

               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_below="@id/nameEd"
                   android:id="@+id/lastname"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="APELLIDOS"
                   android:layout_centerHorizontal="true"

                   android:textSize="20dp"/>
               <EditText
                   android:id="@+id/lastnameEd"
                   android:layout_marginTop="25dp"
                   android:gravity="center"
                   android:layout_centerHorizontal="true"
                   android:layout_width="280dp"
                   android:layout_height="40dp"
                   android:layout_below="@id/lastname"
                   android:background="@drawable/iclo"/>

               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_below="@id/lastnameEd"
                   android:id="@+id/usser"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="USUARIO"
                   android:layout_centerHorizontal="true"

                   android:textSize="20dp"/>
               <EditText
                   android:id="@+id/usserEd"
                   android:layout_marginTop="25dp"
                   android:gravity="center"
                   android:layout_centerHorizontal="true"
                   android:layout_width="280dp"
                   android:layout_height="40dp"
                   android:layout_below="@+id/usser"
                   android:background="@drawable/iclo"/>

               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_below="@id/usserEd"
                   android:id="@+id/email"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="CORREO"
                   android:layout_centerHorizontal="true"

                   android:textSize="20dp"/>
               <EditText
                   android:id="@+id/emailEd"
                   android:layout_marginTop="25dp"
                   android:gravity="center"
                   android:layout_centerHorizontal="true"
                   android:layout_width="280dp"
                   android:layout_height="40dp"
                   android:layout_below="@+id/email"
                   android:background="@drawable/iclo"/>

               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_below="@id/emailEd"
                   android:id="@+id/password"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="CONTRASEÑA"
                   android:layout_centerHorizontal="true"

                   android:textSize="20dp"/>
               <EditText
                   android:id="@+id/passwordEd"
                   android:layout_marginTop="25dp"
                   android:gravity="center"
                   android:layout_centerHorizontal="true"
                   android:layout_width="280dp"
                   android:layout_height="40dp"
                   android:layout_below="@+id/password"
                   android:background="@drawable/iclo"
                   android:password="true" />

               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_below="@id/passwordEd"
                   android:id="@+id/confPassword"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="CONFIRMAR CONTRASEÑA"

                   android:layout_centerHorizontal="true"

                   android:textSize="20dp"/>
               <EditText
                   android:id="@+id/confPasswordEd"
                   android:layout_marginTop="25dp"
                   android:gravity="center"
                   android:layout_centerHorizontal="true"
                   android:layout_width="280dp"
                   android:layout_height="40dp"
                   android:layout_below="@+id/confPassword"
                   android:background="@drawable/iclo"
                   android:password="true"/>
               <Button
                   android:id="@+id/btnEnviar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="ENVIAR"
                   android:onClick="enviar"
                   android:background="@drawable/iclo"
                   android:layout_below="@id/confPasswordEd"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="25dp"
                   android:layout_marginBottom="30dp"/>
               <ProgressBar
                   android:visibility="invisible"
                   android:id="@+id/progreso"
                   android:layout_below="@id/btnEnviar"
                   android:layout_centerHorizontal="true"
                   android:layout_width="80dp"
                   android:layout_height="80dp"/>
           </RelativeLayout>
       </ScrollView>
   </LinearLayout>




</RelativeLayout>