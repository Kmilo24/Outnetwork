<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil"
    android:background="#fefae0">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ini"
        android:background="@drawable/decor5">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/icon_foreground"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/ini"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/decor3">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMBRE: "
            android:textColor="#ffffff"
            android:id="@+id/nom"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_toRightOf="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/apellidos"
            android:layout_marginTop="30dp"
            android:paddingLeft="5dp"
            android:layout_toRightOf="@+id/nombre"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USUARIO: "
            android:textColor="#ffffff"
            android:id="@+id/usu"
            android:layout_below="@+id/nom"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usuario"
            android:layout_toRightOf="@+id/usu"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/nom"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CORREO: "
            android:textColor="#ffffff"
            android:id="@+id/corr"
            android:layout_below="@+id/usu"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correo"
            android:layout_below="@+id/usuario"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/corr"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            />
    </RelativeLayout>
    <Button
        android:onClick="cerrar"
        android:id="@+id/cerrarSesion"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="CERRAR SESIÃ“N"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/circulo"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>